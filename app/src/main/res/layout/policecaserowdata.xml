<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card="http://schemas.android.com/tools"
    app:cardElevation="10dp"
    app:cardUseCompatPadding="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|start"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vehicle No:"
            android:id="@+id/vtext"
            android:textSize="20sp"
            android:padding="10dp"
            />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/vehiclenotext"
                android:text="TN 24 1234"
                android:textSize="20sp"
                android:layout_toRightOf="@id/vtext"
                android:padding="10dp"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location   :"
            android:id="@+id/ltext"
            android:textSize="20sp"
            android:padding="10dp"
            android:textColor="@color/colorPrimary"
            />
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/locationtext"
                android:text="13.000000,84.0000022"
                android:textSize="20sp"
                android:layout_toRightOf="@id/ltext"
                android:padding="10dp"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Verified     :"
            android:textSize="20sp"
            android:id="@+id/vetext"
            android:padding="10dp"
            android:textColor="@color/colorPrimary"
            />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/verifiedtext"
                android:text="No"
                android:textSize="20sp"
                android:layout_toRightOf="@id/vetext"
                android:padding="10dp"
                />
        </RelativeLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>