<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/coordinatorlayout"
    android:background="@drawable/emergencybgmin"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <include layout="@layout/customtoolbar" android:id="@+id/toolbar"/>
    <LinearLayout
        android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
        android:gravity="center"
        android:weightSum="1"
    >
    <android.support.v7.widget.CardView
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:cardElevation="7dp"
        app:cardCornerRadius="10dp"
        android:id="@+id/police"

        >
        <ImageView
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:src="@drawable/policeimg"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/policeid"
            android:text="Police"
            android:layout_gravity="center|bottom"
            android:textSize="20dp"
            android:textColor="@color/colorPrimary"
            />

    </android.support.v7.widget.CardView>
<android.support.v4.widget.Space
    android:layout_width="match_parent"
    android:layout_height="35dp" />
    <android.support.v7.widget.CardView
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:cardElevation="7dp"
        app:cardCornerRadius="10dp"
        android:id="@+id/driver"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:src="@drawable/driverimg"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/driverid"
            android:text="Driver"
            android:textSize="20dp"
            android:textColor="@color/colorPrimary"
            android:layout_gravity="bottom|center"
            />

    </android.support.v7.widget.CardView>
        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="35dp" />
    <android.support.v7.widget.CardView
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:cardElevation="7dp"
        app:cardCornerRadius="10dp"
        android:id="@+id/user"
       >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:src="@drawable/userimg"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/userid"
            android:text="User"
            android:textSize="20dp"
            android:textColor="@color/colorPrimary"
            android:layout_gravity="center|bottom"/>
    </android.support.v7.widget.CardView>



</LinearLayout>
</LinearLayout>
</android.support.design.widget.CoordinatorLayout>